<h1>Meet this cat!</h1>
<br>
<table>
    <thead>
        <tr>
            <th colspan="2"><%= @cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Birth Date</td>
            <td><%= @cat.birth_date.strftime('%a %d %b %Y') %></td>
        </tr>

        <tr>
            <td>Color</td>
            <td><%= @cat.color %></td>
        </tr>

        <tr>
            <td>Age</td>
            <td><%= @cat.age %></td>
        </tr>

        <tr>
            <td>Sex</td>
            <td><%= @cat.sex %></td>
        </tr>

        <tr>
            <td>Description</td>
            <td><%= @cat.description %></td>
        </tr>

    </tbody>
</table>
<br>

<a href="<%= edit_cat_url(@cat) %>">Edit this cat!</a>
<br>

<br>
<h2>Existing Requests!</h2>
<% requests = CatRentalRequest.where(cat_id: @cat.id) %>
<% requests.each do |request| %>
<br>
Start:
  <%= request.start_date.strftime('%a %d %b %Y') %>
  <br>
End:
  <%= request.end_date.strftime('%a %d %b %Y') %>
<br>

<% end %>
